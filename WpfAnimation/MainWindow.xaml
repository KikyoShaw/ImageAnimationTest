<Window x:Class="WpfAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAnimation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="400" MinWidth="400">
    <Grid Background="Black">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center">
                <Button Width="80" Height="45" Content="选择文件夹" Click="ButtonBase_OnClick"/>
                <Button Width="80" Height="45" Content="选择资源" Click="ButtonBase_OnClick2" Margin="10 0 0 0"/>
            </StackPanel>
            <local:Animation x:Name="TestAnimImage" Width="160" Height="160" Margin="0 50 0 0"/>
        </StackPanel>
    </Grid>
</Window>
